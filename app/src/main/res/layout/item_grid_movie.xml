<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_margin"
    app:cardCornerRadius="@dimen/cardCornerRadius"
    app:cardElevation="@dimen/cardElevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/item_grid_img_poster"
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@null"
            tools:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/item_grid_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/item_margin"
            android:layout_below="@id/item_grid_img_poster"
            android:layout_centerHorizontal="true"
            android:lines="2"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            tools:text="Spiderman 2" />

        <TextView
            android:id="@+id/item_grid_tv_date_release"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_grid_tv_title"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:drawableStart="@drawable/ic_date24"
            android:drawablePadding="@dimen/drawablePadding"
            android:layout_margin="@dimen/item_margin"
            tools:text="2018-11-14" />

        <TextView
            android:id="@+id/item_grid_tv_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_grid_tv_title"
            android:layout_marginStart="@dimen/item_margin"
            android:layout_marginTop="@dimen/item_margin"
            android:layout_toEndOf="@id/item_grid_tv_date_release"
            android:drawableStart="@drawable/ic_star24"
            android:drawablePadding="@dimen/drawablePadding"
            android:paddingStart="@dimen/paddingStart"
            android:paddingEnd="@dimen/item_margin"
            tools:text="445" />

    </RelativeLayout>

</android.support.v7.widget.CardView>