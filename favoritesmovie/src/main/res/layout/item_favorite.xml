<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_margin"
    app:cardCornerRadius="4dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/item_fav_img_poster"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_launcher_background" />

        <TextView
            android:id="@+id/item_fav_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_fav_img_poster"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:lines="2"
            android:padding="@dimen/item_margin"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/item_fav_date_release"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_fav_title"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/item_margin"
            android:drawableStart="@drawable/ic_date24"
            android:drawablePadding="4dp" />

        <TextView
            android:id="@+id/item_fav_vote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_fav_title"
            android:layout_marginStart="@dimen/item_margin"
            android:layout_marginTop="@dimen/item_margin"
            android:layout_toEndOf="@id/item_fav_date_release"
            android:drawableStart="@drawable/ic_star24"
            android:drawablePadding="4dp"
            android:paddingStart="4dp"
            android:paddingEnd="@dimen/item_margin" />


    </RelativeLayout>

</android.support.v7.widget.CardView>